{
  "manifest_version": 3,
  "name": "Context Bridge",
  "version": "1.0.0",
  "description": "Don't lose the plot. Continue your AI chats across modelsâ€”with memory.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content.ts-4mVQNZJE.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Open Context Bridge"
    }
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "resources": [
        "assets/content.ts-4mVQNZJE.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
